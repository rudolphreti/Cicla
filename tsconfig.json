{
  "compilerOptions": {
    "outDir": "./dist",  // Wskazuje, że skompilowane pliki JS powinny trafić do katalogu `dist`
    "sourceMap": true,   // Umożliwia generowanie map źródłowych
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"  // Zakłada, że Twoje pliki TypeScript znajdują się w katalogu `src`
  ],
  "exclude": ["node_modules"]
}
